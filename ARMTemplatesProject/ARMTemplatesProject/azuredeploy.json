{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 10,
      "metadata": {
        "description": "Enter Resource group prefix value"
      }
    },
      "rglocation": {
        "type": "string",
        "allowedValues": [ "UK West", "UK South" ],
        "metadata": {
          "description": "Enter UK west or UK South"
        }

      }
  },
  "variables": {
    "resourcegroupfullname": "[concat(parameters('resourceGroupName'),subscription().id)]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[variables('resourcegroupfullname')]",
      "location": "[parameters('rglocation')]"

    }

  ]

}